<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="18dp">

    <ImageView
        android:id="@+id/diary_map_iv"
        android:layout_width="150dp"
        android:layout_height="180dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_camera"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/like_iv"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_heart_filled"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@id/diary_map_iv"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/primary" />

    <ImageView
        android:id="@+id/unlike_iv"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_heart_outlined"
        app:layout_constraintEnd_toEndOf="@id/diary_map_iv"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/primary" />

    <TextView
        android:id="@+id/diary_user_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="name"
        android:textColor="@color/black"
        android:textSize="@dimen/profile_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/diary_map_iv" />

    <TextView
        android:id="@+id/diary_description_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:text="name"
        android:textColor="@color/black"
        android:textSize="@dimen/profile_item"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/diary_user_name_tv" />

</androidx.constraintlayout.widget.ConstraintLayout>